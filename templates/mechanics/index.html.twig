{% extends 'base.html.twig' %}

{% block title %}Mechanics index{% endblock %}

{% block body %}
    <h1>Mechanics index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Specialization</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for mechanic in mechanics %}
            <tr>
                <td>{{ mechanic.id }}</td>
                <td>{{ mechanic.specialization }}</td>
                <td>
                    <a href="{{ path('mechanics_show', {'id': mechanic.id}) }}">show</a>
                    <a href="{{ path('mechanics_edit', {'id': mechanic.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('mechanics_new') }}">Create new</a>
{% endblock %}
