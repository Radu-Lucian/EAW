{% extends 'base.html.twig' %}

{% block title %}Cars index{% endblock %}

{% block body %}
    <br>
    <h1><center>{{"Your cars"|trans}}</center></h1>

    <br>
    <table class="table">
        <thead>
            <tr>
                <th>{{"Id"|trans}}</th>
                <th>{{"Make"|trans}}</th>
                <th>{{"Model"|trans}}</th>
                <th>{{"actions"|trans}}</th>
            </tr>
        </thead>
        <tbody>
        {% for car in cars %}
            <tr>
                <td>{{ car.id }}</td>
                <td>{{ car.make }}</td>
                <td>{{ car.model }}</td>
                <td>
                    <button class="btn btn-outline-secondary" type="button" onclick="location.href='{{ path('cars_show', {'id': car.id}) }}'">{{"Show info"|trans}}</button>
                    <button class="btn btn-warning" type="button" onclick="location.href='{{ path('cars_edit', {'id': car.id}) }}'">{{"Edit"|trans}}</button>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">{{"no records found"|trans}}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <br>
    <center><button class="btn btn-success" type="button" onclick="location.href='{{ path('cars_new') }}'">{{"Add new car"|trans}}</button></center>
{% endblock %}
