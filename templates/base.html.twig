<!DOCTYPE html>
<html>
	<head>
		<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
		<meta charset="UTF-8">
		<title>
			{% block title %}
				{{"Welcome!"|trans}}
			{% endblock %}
		</title>
		{% block stylesheets %}{% endblock %}
	</head>
	<body>
		<nav class="navbar navbar-light" style="background-color: #e3f2fd;">
			<div class="dropdown nav-item text-nowrap">
				<a href="#" class="nav-link dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">
					{% if app.session.get('_locale') == "en" %}
						{{ 'English'|trans }}
					{% else %}
						{{ 'Romanian'|trans }}
					{% endif %}
					<span class="caret"></span>
				</a>
				<ul class="dropdown-menu bg-dark" role="menu">
					<li>
						<a class="nav-link" href="{{ path('user_changelanguage', { 'language': 'en' }) }}">
							<span class="flag-icon flag-icon-us"></span>
							{{ 'English'|trans }}</a>
					</li>
					<li>
						<a class="nav-link" href="{{ path('user_changelanguage', { 'language': 'ro' }) }}">
							<span class="flag-icon flag-icon-mx"></span>
							{{ 'Romanian'|trans }}</a>
					</li>
				</ul>
			</div>
			{% if app.user %}
				{% if is_granted('ROLE_ADMIN') == false %}
					<div class="w-50 order-1 order-md-0">
						{% include 'search/form.html.twig' with {route: 'search_car'} %}
					</div>
				{% endif %}
				<div class="nav-item text-nowrap">
					<button class="btn btn-sm btn-outline-secondary" type="button" onclick="location.href='{{ path('cars_index') }}'">
						{{"Cars"|trans}}</button>
					<button class="btn btn-sm btn-outline-secondary" type="button" onclick="location.href='{{ path('talons_index') }}'">
						{{"Talons"|trans}}</button>
					<button class="btn btn-sm btn-outline-secondary" type="button" onclick="location.href='{{ path('user_tickets_index') }}'">
						{{"Tickets"|trans}}</button>
					{% if is_granted('ROLE_ADMIN') %}
						<button class="btn btn-sm btn-outline-secondary" type="button" onclick="location.href='{{ path('inventory_items_index') }}'">
							{{"Invetory"|trans}}</button>
					{% endif %}
					{% if is_granted('ROLE_ADMIN') %}
						<button class="btn btn-sm btn-outline-secondary" type="button" onclick="location.href='{{ path('mechanics_index') }}'">
							{{"Mechanics"|trans}}</button>
					{% endif %}
					{% if is_granted('ROLE_ADMIN') %}
						<button class="btn btn-sm btn-outline-secondary" type="button" onclick="location.href='{{ path('users_index') }}'">
							{{"Users"|trans}}</button>
					{% endif %}
					{% if is_granted('ROLE_ADMIN') %}
						<button class="btn btn-sm btn-outline-secondary" type="button" onclick="location.href='{{ path('user_tickets_mechanics_index') }}'">
							{{"Tickets_Mechanics"|trans}}</button>
					{% endif %}
					<button class="btn btn-sm btn-outline-secondary" type="button" onclick="location.href='{{ path('notes_index') }}'">
						{{"Notes"|trans}}</button>
					<button class="btn btn-sm btn-outline-secondary" type="button" onclick="location.href='{{ path('progress_index') }}'">
						{{"Progress"|trans}}</button>
					<button class="btn btn-sm btn-primary" type="button" onclick="location.href='{{ path('app_logout') }}'">
						{{"Sign out"|trans}}</button>
					{% if is_granted('ROLE_ADMIN') %}
						<button class="btn btn-sm btn-info" type="button" onclick="location.href='{{ path('easyadmin') }}'">
							{{"Admin controller"|trans}}</button>
					{% endif %}
				</div>
			{% endif %}
		</nav>


		{% block body %}{% endblock %}
		{% block javascripts %}{% endblock %}
		<script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
		<script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
		<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
	</body>
</html>
