{% extends 'base.html.twig' %}

{% block title %}Progress index{% endblock %}

{% block body %}
    <h1>Progress index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>State</th>
                <th>Estimation_date</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for progress in progress %}
            <tr>
                <td>{{ progress.id }}</td>
                <td>{{ progress.state }}</td>
                <td>{{ progress.estimationDate ? progress.estimationDate|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('progress_show', {'id': progress.id}) }}">show</a>
                    <a href="{{ path('progress_edit', {'id': progress.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('progress_new') }}">Create new</a>
{% endblock %}
