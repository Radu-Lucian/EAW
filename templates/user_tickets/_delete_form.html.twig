<form method="post" action="{{ path('user_tickets_delete', {'id': user_ticket.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user_ticket.id) }}">
    <center><button class="btn btn btn-danger">{{"Delete"|trans}}</button></center>
</form>
