{% extends 'base.html.twig' %}

{% block title %}{{"UserTickets index"|trans}}{% endblock %}

{% block body %}
    <br>
    <h1><center>{{"Your created Tickets"|trans}}</center></h1>

    <br>
    <table class="table">
        <thead>
            <tr>
                <th>{{"Id"|trans}}</th>
                <th>{{"Description"|trans}}</th>
                <th>{{"Date started"|trans}}</th>
                <th>{{"Related car"|trans}}</th>
                <th>{{"actions"|trans}}</th>
            </tr>
        </thead>
        <tbody>
        {% for user_ticket in user_tickets %}
            <tr>
                <td>{{ user_ticket.id }}</td>
                <td>{{ user_ticket.description }}</td>
                <td>{{ user_ticket.dateStarted ? user_ticket.dateStarted|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <button class="btn btn-outline-secondary" type="button" onclick="location.href='{{ path('cars_show', {'id': user_ticket.FKUserTicketCarId.id}) }}'">{{ user_ticket.FKUserTicketCarId }}</button>
                </td>
                <td>
                    <button class="btn btn-outline-secondary" type="button" onclick="location.href='{{ path('user_tickets_show', {'id': user_ticket.id}) }}'">{{"Show info"|trans}}</button>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">{{"no records found"|trans}}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <br>
    <center><button class="btn btn-success" type="button" onclick="location.href='{{ path('user_tickets_new') }}'">{{"Add new ticket"|trans}}</a></center>
{% endblock %}
