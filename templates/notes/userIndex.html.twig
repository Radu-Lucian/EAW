{% extends 'base.html.twig' %}

{% block title %}{{"Notes index"|trans}}{% endblock %}

{% block body %}
    <br>
    <h1><center>{{"Notes responses regarding a progress from mechanics"|trans}}</center></h1>

    <br>
    <table class="table">
        <thead>
            <tr>
                <th>{{"Id"|trans}}</th>
                <th>{{"Message"|trans}}</th>
                <th>{{"From progress"|trans}}</th>
                <th>{{"actions"|trans}}</th>
            </tr>
        </thead>
        <tbody>
        {% for note in notes %}
            <tr>
                <td>{{ note.id }}</td>
                <td>{{ note.message }}</td>
                <td>
                    <button class="btn btn-outline-secondary" type="button" onclick="location.href='{{ path('user_tickets_show', {'id': note.FKNoteProgressId.id}) }}'">{{ note.FKNoteProgressId }}
                </td>
                <td>
                    <button class="btn btn-outline-secondary" type="button" onclick="location.href='{{ path('notes_show', {'id': note.id}) }}'">{{"Show info"|trans}}</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">{{"no records found"|trans}}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
